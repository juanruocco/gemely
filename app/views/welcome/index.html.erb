<!DOCTYPE html>
<html>
<head>
  <title>GifVault</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>


<% if current_user %>
  Signed in as <%= current_user.name %> | <%= link_to "Logout", '/logout' %>
<table>
  <%
  likes = current_user.likes
  likes.each do |like| %>
  <tr>

    <td>

      <%= like.name %>
    </td>
    <td>

      <%= like.like %>
    </td>
  </tr>

  <% end %>
</table>


<%= form_for :like, url: '/likes' do |f| %>
  Name : <%= f.select :name, Hobby.all.collect { |p| [ p.name, p.name ] } %>
  Gusto: <%= f.range_field :like, :min=>-10, :max=>10, :class=>"slide", :id=>"slider1"%>
  <%= f.submit %>
<% end %>

<% else %>
  <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', '/signup' %>
<% end %>

<%= yield %>

</body>
</html>
